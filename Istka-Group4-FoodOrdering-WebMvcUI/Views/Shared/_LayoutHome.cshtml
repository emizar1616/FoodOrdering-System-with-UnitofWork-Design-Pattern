    <style>
        button {
            font-size: 1rem;
            border: none;
            outline: none;
            padding: 7px 12px;
            border-radius: 16px;
            background-color: #6046b6;
            color: whitesmoke;
            display: flex; /* Buton içeriğini hizalamak için */
            align-items: center; /* İçeriği dikeyde hizalamak için */
            text-decoration: none; /* Altı çizgiyi kaldır */
            transition: background-color 0.3s, color 0.3s; /* Hover için geçiş efekti */
            /* Alt çizgiyi kaldırma */
            cursor: pointer; /* El işareti cursor */
        }

            button:hover {
                background-color: #4834a6; /* Hover arka plan rengi */
                text-decoration: underline; /* Alt çizgi ekle */
            }

        .butonshop {
            font-size: 23px;
            background-color: #ffc107;
            color: whitesmoke;
            padding: 7px 12px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .butonshop:hover {
                background-color: #ff9800;
                color: black;
            }

        .auth-buttons {
            display: flex;
            align-items: center;
        }

            .auth-buttons button {
                margin-right: 10px;
            }

            .auth-buttons .auth-text {
                margin-right: 10px;
                font-size: 15px;
                color: #41346E;
                font-weight: bold;
            }

        .rd-navbar-nav .rd-nav-link {
            text-decoration: none; /* Altı çizgiyi kaldır */
        }

        .carousel-control-prev,
        .carousel-control-next {
            width: 5%; /* Düğme genişliği */
            height: 50px; /* Düğme arka plan yüksekliği */
            background-color: #ffc107; /* Düğme arka plan rengi */
            border-radius: 50px; /* Düğme köşe yuvarlama */
            position: absolute; /* Mutlak konumlandırma */
            top: 50%; /* Üstten mesafe */
            transform: translateY(-50%); /* Yükseklik için dikey hizalama */
        }

        .carousel-control-prev {
            left: 0; /* Sola yaslanma */
        }

        .carousel-control-next {
            right: 0; /* Sağa yaslanma */
        }

        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            font-size: 50px; /* İkonun font büyüklüğü */
            color: #fff; /* İkon rengi */
            border-radius: 50%; /* Düğme köşe yuvarlama */
            padding: 10px; /* İkonun etrafındaki boşluk */
        }

        .carousel-control-next:hover,
        .carousel-control-prev:hover {
            background-color: #6046b6; /* Hover durumunda arka plan rengi */
        }
    </style>

