@model IEnumerable<Istka_Group4_FoodOrdering_Entity.ViewModels.ProductSaleViewModel>

@{
    ViewData["Title"] = "Gerçekleşmiş Satışlar";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    h2 {
        text-align: center;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .table {
        width: 90%;
        margin: auto;
    }

    th, td {
        text-align: center;
        vertical-align: middle;
    }

    .table thead th {
        background-color: #f8f9fa;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }
</style>

<h2>Yapılan Satışlar</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Satış ID</th>
            <th>Tarih</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Kullanıcı ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>@sale.Id</td>
                <td>@sale.Date.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@sale.Quantity</td>
                <td>@sale.Price.ToString("C")</td>
                <td>@sale.UserId</td>
            </tr>
        }
    </tbody>
</table>
