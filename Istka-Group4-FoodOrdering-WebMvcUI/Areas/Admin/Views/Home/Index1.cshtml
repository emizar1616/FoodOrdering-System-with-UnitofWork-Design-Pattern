@{
    ViewData["Title"] = "Admin Panel Ana Sayfası";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .welcome-section {
        text-align: center;
    }

        .welcome-section h1 {
            font-size: 2.5rem;
            color: #343a40;
        }

        .welcome-section p {
            font-size: 1.25rem;
            color: #6c757d;
        }

        .welcome-section img {
            max-width: 100%;
            height: auto;
            border-radius: 15px;
            margin-top: 20px;
        }

    .quick-links {
        margin-top: 40px;
    }

        .quick-links a {
            text-decoration: none;
        }

        .quick-links i {
            font-size: 2rem;
            color: #007bff;
            margin-bottom: 10px;
        }

        .quick-links .card {
            padding: 20px;
            text-align: center;
            transition: transform 0.3s;
            border: 1px solid #e0e0e0;
            border-radius: 10px;
        }

            .quick-links .card:hover {
                transform: scale(1.05);
                border-color: #007bff;
            }

        .quick-links h5 {
            margin-top: 10px;
            color: #343a40;
        }

    .back-button {
        margin-top: 40px;
        text-align: center;
    }

        .back-button a {
            text-decoration: none;
            font-size: 1.25rem;
            color: white;
            background-color: #007bff;
            padding: 10px 20px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .back-button a:hover {
                background-color: #0056b3;
            }
</style>

<div class="welcome-section">
    <h1><i class="fas fa-home"></i> Hoşgeldiniz!</h1>
    <p>Burası admin sayfası. Buradan sisteminizi yönetebilirsiniz.</p>
    <img src="/images/admin.jpg" alt="Hoşgeldiniz Resmi" style="height: 440px; width:910px" />
</div>


<div class="back-button">
    <a asp-area="" asp-controller="Home" asp-action="Index">Siteme Geri Dön</a>
</div>

